<h1>Admin#index</h1>
<p>Find me in app/views/admin/index.html.erb</p>


<h1>Posts</h1>
<div class="panel panel-default">
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.user.email %></td>

        <td><%= link_to 'Show', post, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-default" %></td>
        <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>


      </tr>
    <% end %>
  </tbody>
</table>
</div>

<h1>Users</h1>
<div class="panel panel-default">
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>User Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.user_type %></td>

        <td><%#= link_to 'Show', post, class: "btn btn-default" %></td>
        <td><%#= link_to 'Edit', edit_post_path(post), class: "btn btn-default" %></td>
        <%#= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        <td><%= link_to 'Delete', user_registration_path, :confirm => 'Are you sure you want to destroy your account?', :method => :delete, class: "btn btn-danger" %></td>


      </tr>
    <% end %>
  </tbody>
</table>
</div>
