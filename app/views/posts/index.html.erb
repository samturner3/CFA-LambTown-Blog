<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<div class="panel panel-default">
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.user.email %></td>

        <td><%= link_to 'Show', post, class: "btn btn-default" %></td>
        <%if post.user == current_user%>
        <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-default" %></td>
        <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        <%else%>
        <td></td>
        <td></td>
        <%end%>

      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Post', new_post_path, class: "btn btn-default" %>
